{
  "extends": [
    "eslint-config-synacor", 
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "flowtype"
  ],
  "rules": {
      "no-unused-vars": "warn",
      "react/sort-comp": "off",
      "lines-around-comment": "off",
      "react/prefer-stateless-function": "off",
      "react/jsx-indent-props": [true, 2],
      "react/jsx-no-bind": "off",
      "guard-for-in": "error"
    }
}
