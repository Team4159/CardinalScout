{
  "extends": [
    "eslint-config-synacor", 
    "prettier"
  ],
  "plugins": [
    "eslint-plugin-prettier",
    "flowtype"
  ],
  "rules": {
      "no-unused-vars": "warn",
      "react/sort-comp": "off",
      "lines-around-comment": "off",
      "react/prefer-stateless-function": "off",
      "indent": [
        "error",
        2
      ],
      "quotes": ["error", "double"],
      "semi": ["error", "always"],
      "react/jsx-indent-props": [true, 2]
    }
}
